<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/calculatorHeader"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="#7851a9"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="25sp"
            android:paddingLeft="10sp"
            android:textSize="24sp"
            android:text="Calculator"
            android:textAlignment="center"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/pleaseInput"
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:text="Enter Two Numbers:"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.225" />

    <EditText
        android:id="@+id/num1"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="1-10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/pleaseInput"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/num2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="1-10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/pleaseInput"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pleaseInput" />


</androidx.constraintlayout.widget.ConstraintLayout>